{
  "load_direnv": "direct",

  // AI

  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },

  // Editor

  "ui_font_size": 16,
  "buffer_font_size": 16,
  "vim_mode": true,

  // Theme

  "theme": {
    "mode": "system",
    "light": "Dracula",
    "dark": "Dracula"
  },

  // Languages and LSPs

  "languages": {
    "JSON": {
      "language_servers": ["json-language-server", "!nixd", "!nil"]
    },
    "Nix": {
      "language_servers": ["nixd", "!nil"],
      "formatter": {
        "external": {
          "command": "nixfmt", // or "alejandra"
          "arguments": ["--quiet", "--"]
        }
      }
    }
  }
}
